(function() {
  'use strict';

  angular
    .module('walterApp.navbar', [])
    .directive('navbar', navbar)
    .controller('NavbarController', NavbarController)
  ;

  function navbar () {
    return {
      restrict: 'AE',
      templateUrl: "<%= asset_path('app/components/navbar/navbar.html') %>",
      controller: NavbarController,
      controllerAs: 'navbar',
      bindToController: true,
      scope: {
        'gravatar_url': '='
      }
    }
  }

  NavbarController.$inject = ['CurrentUser'];
  function NavbarController (CurrentUser) {
    this.gravatar_url = CurrentUser.gravatar_url;
  }
})();
