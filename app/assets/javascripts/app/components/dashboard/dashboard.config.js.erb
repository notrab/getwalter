(function() {
  'use strict';

  angular
    .module('walterApp.dashboard')
    .config(DashboardConfig)
    .constant('AccessLevels', {guest: 0, user: 1})
  ;

  DashboardConfig.$inject = ['$stateProvider', 'AccessLevels'];
  function DashboardConfig ($stateProvider, AccessLevels) {
    $stateProvider
      .state('dashboard', {
        abstract: true,
        templateUrl: "<%= asset_path('app/components/dashboard/dashboard.html') %>",
        data: {
          access: AccessLevels.user
        }
      })

      .state('dashboard.list', {
        url: '/dashboard',
        data: {
          pageTitle: 'Dashboard'
        },
        views: {
          'navbar': {
            template: '<navbar />'
          },

          'header': {
            templateUrl: "<%= asset_path('app/components/form/list/header.html') %>"
          },

          'content': {
            templateUrl: "<%= asset_path('app/components/form/list/list.html') %>",
            controller: 'ListFormController',
            controllerAs: 'list'
          }
        }
      })
    ;
  }
})();
