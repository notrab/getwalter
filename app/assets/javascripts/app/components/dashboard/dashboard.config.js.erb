(function() {
  'use strict';

  angular
    .module('walterApp.dashboard')
    .config(DashboardConfig)
  ;

  DashboardConfig.$inject = ['$stateProvider'];
  function DashboardConfig ($stateProvider) {
    $stateProvider
      .state('dashboard', {
        url: '/',
        data: {
          pageTitle: 'Dashboard'
        },
        views: {
          'navbar': {
            template: '<navbar />'
          },

          'header': {
            templateUrl: "<%= asset_path('app/components/form/list/header.html') %>"
          },

          'content': {
            templateUrl: "<%= asset_path('app/components/form/list/list.html') %>",
            controller: 'ListFormController',
            controllerAs: 'list'
          }
        }
      })
    ;
  }
})();
