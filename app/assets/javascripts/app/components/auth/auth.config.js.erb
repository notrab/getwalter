(function() {
  'use strict';

  angular
    .module('walterApp.auth')
    .config(AuthConfig)
    .constant('AccessLevels', {guest: 0, user: 1})
  ;

  function AuthConfig ($stateProvider, $urlRouterProvider, AccessLevels) {
    $stateProvider
      .state('guest', {
        abstract: true,
        template: '<ui-view/>',
        data: {
          access: AccessLevels.guest
        }
      })

      .state('guest.home', {
        url: '/',
        templateUrl: "<%= asset_path('app/components/guest/home.html') %>",
      })

      .state('guest.login', {
        url: '/login',
        templateUrl: "<%= asset_path('app/components/auth/login.html') %>",
        controller: 'LoginController',
        controllerAs: 'login'
      })

      .state('guest.register', {
        url: '/register',
        templateUrl: "<%= asset_path('app/components/auth/register.html') %>",
        controller: 'RegisterController',
        controllerAs: 'register'
      })
    ;
  };
})();
