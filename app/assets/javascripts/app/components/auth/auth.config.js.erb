(function() {
  'use strict';

  angular.module('walterApp')
  .config(function($stateProvider, $urlRouterProvider, AccessLevels) {

    $stateProvider
      .state('guest', {
        abstract: true,
        template: '<ui-view/>',
        data: {
          access: AccessLevels.guest
        }
      })

      .state('guest.home', {
        url: '/',
        templateUrl: "<%= asset_path('app/components/guest/home.html') %>",
      })

      .state('guest.login', {
        url: '/login',
        templateUrl: "<%= asset_path('app/components/auth/login.html') %>",
        controller: 'LoginController'
      })

      .state('guest.register', {
        url: '/register',
        templateUrl: "<%= asset_path('app/components/auth/register.html') %>",
        controller: 'RegisterController'
      })
    ;
  });
})();
