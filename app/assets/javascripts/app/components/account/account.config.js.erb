(function() {
  'use strict';

  angular
    .module('walterApp.account')
    .config(AccountConfig)
    .constant('AccessLevels', {guest: 0, user: 1})
  ;

  AccountConfig.$inject = ['$stateProvider', 'AccessLevels'];
  function AccountConfig ($stateProvider, AccessLevels) {
    $stateProvider
      .state('account', {
        parent: 'dashboard',
        url: '/account',
        data: {
          pageTitle: 'Account Settings',
          access: AccessLevels.user
        },
        views: {
          'navbar': {
            template: '<navbar />'
          },
          'header': {
            templateUrl: "<%= asset_path('app/components/account/header.html') %>"
          },
          'content': {
            templateUrl: "<%= asset_path('app/components/account/account.html') %>",
            controller: 'AccountController',
            controllerAs: 'account'
          }
        }
      })
    ;
  }
})();
